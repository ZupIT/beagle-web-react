{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "es6",
    "target": "esnext",
    "preserveConstEnums": true,
    "removeComments": true,
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "jsx": "react",
    "outDir": "./dist/",
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "components/*": ["components/*"],
      "models/*": ["models/*"],
      "render/*": ["render/*"],
      "utils/*": ["utils/*"],
      "types/*": ["types/*"]
    }
  },
  "include": ["src/**/*", "__tests__/**/*"],
  "exclude": ["node_modules"]
}
